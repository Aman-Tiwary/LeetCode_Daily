https://leetcode.com/problems/contiguous-array

class Solution {
public:
    int findMaxLength(vector<int>& nums) {
      int n = nums.size();
      unordered_map<int,int> mp;
      int curSum=0;
       mp[0]=-1;

       int res= 0;
       for(int i=0;i<n;i++){
        curSum += (nums[i]==1 ? 1:-1);
        if(mp.find(curSum)!=mp.end()){
            res = max(res,i-mp[curSum]);
        }
        else{
            mp[curSum]=i;
        }
       } 
       return res;
    }
};
